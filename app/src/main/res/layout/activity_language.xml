<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_40dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            style="@style/LanguageOptionMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_language_selection"></TextView>

        <ImageView
            android:id="@+id/buttonEnglish"
            style="@style/PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_english"></ImageView>

        <ImageView
            android:id="@+id/buttonHindi"
            style="@style/PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_hindi"></ImageView>

        <ImageView
            android:id="@+id/buttonMarathi"
            style="@style/PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_marathi"></ImageView>

    </LinearLayout>
</LinearLayout>