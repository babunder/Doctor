<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:layout_marginTop="@dimen/margin_40dp"
        android:orientation="vertical">

        <TextView
            style="@style/LanguageOptionMessage"
            android:layout_width="match_parent"
            android:text="@string/lbl_language_selection"
            android:layout_height="wrap_content"></TextView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:padding="@dimen/padding_5dp"
                android:src="@drawable/icon_english"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:visibility="gone"
                android:layout_height="50dp"></ImageView>

            <ImageView
                android:id="@+id/buttonEnglish"
                style="@style/PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_english"></ImageView>
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:padding="@dimen/padding_5dp"
                android:src="@drawable/hindi"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:layout_height="50dp"></ImageView>

            <ImageView
                android:id="@+id/buttonHindi"
                style="@style/PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_hindi"></ImageView>
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:padding="@dimen/padding_5dp"
                android:src="@drawable/ic_marathi"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:visibility="visible"
                android:layout_height="50dp"></ImageView>

            <ImageView
                android:id="@+id/buttonMarathi"
                style="@style/PrimaryButton"
                android:src="@drawable/icon_marathi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>