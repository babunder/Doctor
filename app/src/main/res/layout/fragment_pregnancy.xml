                    android:textSize="18dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/if_you_feel_tired_you_should_rest_so_much_work_must_be_done_with_happiness"
                    android:textColor="@color/green"
                    android:textSize="18dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/while_sleeping_the_room_should_be_supported_while_sitting"
                    android:textColor="@color/green"
                    android:textSize="18dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yoga_should_be_done"
                    android:textColor="@color/green"
                    android:textSize="18dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/drawable_gray"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/what_not_to_do"
                    android:textColor="@color/red"
                    android:textSize="22dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/do_not_work_too_much_asthma_do_not_lift_weights"
                    android:textColor="@color/red"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/avoid_eating_outdoors"
                    android:textColor="@color/red"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/avoid_eating_bread_biscuits_chinese_chili_fried_foods"
                    android:textColor="@color/red"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/drugs_should_be_avoided"
                    android:textColor="@color/red"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/avoid_eating_outdoorss"
                    android:textColor="@color/red"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/drawable_gray"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_abortion"
                    android:textColor="@color/black_orange"
                    android:textSize="22dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/in_the_first_three_and_a_half_months_nature_causes_abortions_due_to_severe_defects_in_the_fetus"
                    android:textColor="@color/black_orange"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/an_abortion_can_occur_if_a_pregnant_woman_has_a_serious_illness"
                    android:textColor="@color/black_orange"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
