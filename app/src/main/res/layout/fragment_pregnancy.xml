                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/drawable_gray"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/what_to_do"
                    android:textColor="@color/green"
                    android:textSize="22dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/in_order_to_reduce_the_pain_of_vomiting_use_the_ginger_blossom"
                    android:textColor="@color/green"
                    android:textSize="18dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/when_you_wake_up_in_the_morning_eat_the_fruit_eat_dry_bread_and_chapatis"
                    android:textColor="@color/green"
                    android:textSize="18dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eat_a_lot_of_fruits"
                    android:textColor="@color/green"
                    android:textSize="18dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eat_home_made_easy_to_digest_food"
                    android:textColor="@color/green"
                    android:textSize="18dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
