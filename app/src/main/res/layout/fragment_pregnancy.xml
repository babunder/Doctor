                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/drawable_gray"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_prevent_abortion"
                    android:textColor="@color/black_orange"
                    android:textSize="22dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/if_the_mouth_of_the_fetus_is_weak_after_the_fourth_month_it_should_be_done"
                    android:textColor="@color/black_orange"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/do_not_marry_in_a_close_relationship"
                    android:textColor="@color/black_orange"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_should_be_pure_water"
                    android:textColor="@color/black_orange"
                    android:textSize="16dp"
                    android:padding="6dp"
                    android:textStyle="bold|italic" />


