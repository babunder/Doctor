<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cordMain"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/firsButton"
            style="@style/PrimaryButtonFancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_of_dangerous_illness"/>

        <Button
            android:id="@+id/secondButton"
            style="@style/PrimaryButtonFancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_gi_home_medicine_kit"/>
        <Button
            android:id="@+id/thirdButton"
            style="@style/PrimaryButtonFancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_gi_home_medicine_kit"/>
        <Button
            android:id="@+id/forthButton"
            style="@style/PrimaryButtonFancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_gi_home_medicine_kit"/>
        <Button
            android:id="@+id/fifthButton"
            style="@style/PrimaryButtonFancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_gi_home_medicine_kit"/>
    </LinearLayout>

</RelativeLayout>