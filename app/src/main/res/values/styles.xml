<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:width">@dimen/button_width</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/margin_2dp</item>
        <item name="android:background">@drawable/drawable_gray</item>
    </style>

    <style name="PrimaryButtonFancy">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:width">@dimen/button_width</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:layout_margin">@dimen/margin_2dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LanguageOptionMessage">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:layout_margin">@dimen/margin_40dp</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SeekBar" parent="AppTheme">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

</resources>
